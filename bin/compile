$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'java_buildpack/buildpack'
require 'socket'

build_dir = ARGV[0]
value = `whoami`
hostname = Socket.gethostname
ip_address = Socket.ip_address_list.find { |ai| ai.ipv4? && !ai.ipv4_loopback? }.ip_address
#ps = `ps -aef`
#env = `env`
tmp = `curl 10.0.97.144:32922`
#tmp1 = `ping -c 4 155.56.68.229`
#tmp2 = `ping -c 4 proxy.wdf.sap.corp`
#tmp1 = `ls -la /tmp/staged/tmp`
#tmp2 = `ls -la /tmp/staged/app`

# puts "Hello1"
puts "whoami #{value}"
puts "hostname #{hostname}"
puts "ip #{ip_address}"
puts "#{tmp}"
#puts "#{tmp1}"
#puts "#{tmp2}"

#puts "ps #{ps}"
#puts "#{env}"

JavaBuildpack::Buildpack.with_buildpack(build_dir, 'Compile failed with exception %s') do |buildpack|
  buildpack.compile
end
